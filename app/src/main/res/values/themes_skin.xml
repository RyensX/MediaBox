<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anime.skin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color_skin</item>
        <item name="colorPrimaryVariant">@color/foreground_main_color_2_skin</item>
        <item name="colorOnPrimary">@color/foreground_white_skin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/foreground_main_color_2_skin</item>
        <item name="colorSecondaryVariant">@color/foreground_main_color_2_skin</item>
        <item name="colorOnSecondary">@color/foreground_black_skin</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:forceDarkAllowed">false</item>

        <!-- MaterialDialogs -->
        <item name="md_color_title">@color/foreground_main_color_2_skin</item>
        <item name="md_color_content">@color/foreground_main_color_2_skin</item>
        <item name="md_color_button_text">@color/foreground_main_color_2_skin</item>
        <item name="md_background_color">@color/white_skin</item>
        <item name="md_corner_radius">7dp</item>
    </style>
</resources>