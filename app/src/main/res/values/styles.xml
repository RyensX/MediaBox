<resources>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <!--        dialog是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--        dialog是否悬浮在activity上,设置为false，相当于布局在activity中，例如软键盘，可以顶起false的dialog-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--        去除dialog最底部的灰色背景-->
        <item name="colorBackgroundFloating">@color/foreground_transparent_skin</item>
        <!--        去除dialog默认白色背景-->
        <item name="android:background">@color/foreground_transparent_skin</item>
        <!--        是否加遮罩（对话框出现时，背景变暗。为true则充许变暗）-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SkinToolBar" parent="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorControlNormal">@color/foreground_white_skin</item>
    </style>

    <style name="PluginInstallerStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.AppCompat.DayNight.Fullscreen" parent="App.Theme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
