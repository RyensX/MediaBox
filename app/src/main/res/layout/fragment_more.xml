<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.MoreFragment">

    <com.skyd.imomoe.view.component.AnimeToolbar
        android:id="@+id/atb_more_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="6dp"
        app:backDrawable="@drawable/ic_beans_main_color_24_skin"
        app:backDrawableTitlePadding="0px"
        app:backTint="@color/foreground_white_skin"
        app:title="@string/more"
        app:titleColor="@color/foreground_white_skin"
        app:titleSize="17sp"
        app:toolBarBackground="@color/main_color_2_skin"
        app:typeface="bPRTypeface" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_more_fragment"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

</LinearLayout>
