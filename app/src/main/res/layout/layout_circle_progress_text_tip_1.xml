<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_circle_progress_text_tip_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/pb_circle_progress_text_tip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/foreground_main_color_2_skin"
        android:indeterminateTintMode="src_atop" />

    <com.su.mediabox.view.component.textview.TypefaceTextView
        android:id="@+id/tv_circle_progress_text_tip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pb_circle_progress_text_tip_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/foreground_main_color_2_skin"
        android:textSize="17sp"
        app:typeface="bPRTypeface"
        tools:text="@string/read_download_data_file" />
</RelativeLayout>