<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="12dp"
    tools:background="@color/black">

    <CheckBox
        android:id="@+id/item_skip_pos_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_skip_pos_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/item_skip_pos_time"
        app:layout_constraintStart_toEndOf="@id/item_skip_pos_enable"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/item_skip_pos_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_timer_12"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="11:08 +80s"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_skip_pos_enable"
        app:layout_constraintTop_toBottomOf="@id/item_skip_pos_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>